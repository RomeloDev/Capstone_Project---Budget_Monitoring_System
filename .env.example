# =====================================
# Django Environment Configuration
# =====================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# Django Settings
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-this-in-production

# Set to True for development, False for production
DEBUG=True

# Comma-separated list of allowed hosts
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================================
# Database Configuration - Local Development
# =====================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=postgres_bb_budget_monitoring_db
DB_USER=postgres
DB_PASSWORD=your-local-db-password
DB_HOST=localhost
DB_PORT=5432

# =====================================
# Database Configuration - Production
# =====================================
# Leave this commented out for local development
# Uncomment ONLY when deploying to Railway for testing
# Format: postgresql://user:password@host:port/database
# DATABASE_URL=

# =====================================
# NPM Configuration
# =====================================
# Leave empty to auto-detect, or specify path to npm binary
# Windows example: C:\Program Files\nodejs\npm.cmd
# Linux/Mac example: /usr/bin/npm
NPM_BIN_PATH=

# =====================================
# Email Configuration
# =====================================
# For development, use console backend to print emails to console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production with Gmail:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=

# =====================================
# Additional Settings (Optional)
# =====================================
# Add any additional environment variables your project needs below
